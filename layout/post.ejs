<article class="post-body">

    <div class="title">
        <h1 class="title-content">
            <%= page.title %>
        </h1>

        <div class="title-meta">
            <span class="title-meta-time">
                <%- date(page.date, "YYYY-MM-DD") %>
            </span>
        </div>
    </div>

    <div class="content">

        <% /**
         * judge whether add toc part
         */ %>
        <% if(theme.post_toc) { %>
        <%- toc(page.content, {
            list_number: false
        }) %>
        <% } %>

        <%- page.content %>
    </div>

</article>
