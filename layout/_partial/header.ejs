<header>
    <div class="container">

        <% /* page title logo */ %>
        <div>
            <h1 class="page-logo">
                <a href="<%- url_for() %>">
                    <%= config.title %>
                </a>
            </h1>
        </div>

        <% /* page title menu */ %>
        <nav class="navbar">
            <ul class="menus">
                <% for (menu in theme.menus) { %>
                <li class="menu-item">
                    <a href="<%- url_for(theme.menus[menu]) %>">
                        <% /* read configs from lang.yml */ %>
                        <%= __(menu) %>
                    </a>
                </li>
                <% } %>
            </ul>
        </nav>

    </div>
</header>
